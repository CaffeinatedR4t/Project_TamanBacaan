<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERBAIKAN: Menghapus spasi yang salah pada nama izin -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.TamanBacaan"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">

        <!-- Activity Utama sebagai titik masuk aplikasi -->
        <activity
            android:name=".activities.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.main.MainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.AdminActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.BookDetailActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan" />

        <activity
            android:name=".activities.VerificationActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan" />

    </application>

</manifest>
