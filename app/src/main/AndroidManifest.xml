<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin untuk mengakses internet (untuk Glide, Retrofit, dll.) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Izin untuk memeriksa status koneksi jaringan -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.TamanBacaan"
        tools:targetApi="tiramisu"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- Activity Utama: Login menjadi titik masuk aplikasi -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity untuk Pendaftaran Pengguna -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <!-- Activity untuk Dasbor Pengguna -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <!-- Activity untuk Dasbor Admin -->
        <activity
            android:name=".activities.AdminActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan"
            android:windowSoftInputMode="adjustPan" />

        <!-- Activity untuk Detail Buku -->
        <activity
            android:name=".activities.BookDetailActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan" />

        <!-- [DITAMBAHKAN] Activity untuk Verifikasi Anggota oleh Admin -->
        <activity
            android:name=".activities.VerificationActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.TamanBacaan" />

    </application>

</manifest>
